{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для редактирования информации о магазине",
    "method": "post",
    "properties": {
        "id": {
            "type": "integer",
            "edscription": "Идентификатор магазина"
        },
        "name": {
            "type": "string",
            "edscription": "Название"
        },
        "description": {
            "type": "string",
            "edscription": "Поле с описанием"
        },
        "city": {
            "type": "string",
            "edscription": "Название города"
        },
        "region": {
            "type": "string",
            "edscription": "Название региона"
        },
        "country": {
            "type": "string",
            "edscription": "Название страны"
        },
        "latitude": {
            "type": [
                "string",
                "number",
                "null"
            ],
            "edscription": "Широта"
        },
        "longitude": {
            "type": [
                "string",
                "number",
                "null"
            ],
            "edscription": "Долгота"
        },
        "address": {
            "type": "string",
            "edscription": "Адрес"
        },
        "zip": {
            "type": "string",
            "edscription": "Индекс"
        },
        "contacts": {
            "type": "object",
            "properties": {
                "phone": {
                    "type": "string",
                    "description": "телефон"
                },
                "email": {
                    "type": "string",
                    "description": "email"
                },
                "telegram": {
                    "type": "string",
                    "description": "Telegram"
                },
                "whatsapp": {
                    "type": "string",
                    "description": "WhatsApp"
                },
                "skype": {
                    "type": "string",
                    "description": "Skype"
                },
                "facebook": {
                    "type": "string",
                    "description": "Facebook"
                },
                "viber": {
                    "type": "string",
                    "description": "Viber"
                },
                "vk": {
                    "type": "string",
                    "description": "Vkontakte"
                },
                "ok": {
                    "type": "string",
                    "description": "Одноклассники"
                },
                "twitter": {
                    "type": "string",
                    "description": "Twitter"
                },
                "instagram": {
                    "type": "string",
                    "description": "Instagramm"
                }
            }
        }
    }, 
    "required": [
        "id"
    ],
    "type": "object"
}