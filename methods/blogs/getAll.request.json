{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метод для получения списка статей всех блогов",
    "properties": {
        "filters": {
            "description": "Фильтры",
            "properties": {
                "tab": {
                    "description": "Активная вкладка",
                    "enum": [
                        "all",
                        "my",
                        "subscribe",
                        "interest"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "last_id": {
            "description": "Последний идентификатор",
            "type": "string"
        },
        "shop_id": {
            "description": "Идентификатор магазина",
            "type": "integer"
        },
        "limit": {
            "default": 20,
            "description": "Лимит",
            "minNum": 1,
            "type": "integer"
        }
    },
    "required": [],
    "type": "object"
}