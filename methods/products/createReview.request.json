{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метод для отправки отзыва о товаре",
    "method": "post",
    "properties": {
        "id": {
            "description": "Идентификатор товара",
            "type": "integer"
        },
        "order_id": {
            "description": "Идентификатор заказа",
            "type": "integer"
        },
        "text": {
            "description": "Текст отзыва",
            "type": "string"
        },
        "rating": {
            "description": "Рейтинг",
            "type": "integer"
        }
    },
    "required": [
        "order_id"
    ],
    "type": "object"
}